{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Install Addons",
            "type": "debugpy",
            "request": "launch",
            "stopOnEntry": false,
            "console": "integratedTerminal",
            "program": "/usr/bin/odoo",
            "args": [
                "--config=/etc/odoo/odoo.conf",
                "--limit-time-real",
                "300",
                "-d",
                "odoo-local",
                "-i",
                "pharmacy_management",
                "--stop-after-init"
            ]
        },
        {
            "name": "Update Addons",
            "type": "debugpy",
            "request": "launch",
            "stopOnEntry": false,
            "console": "integratedTerminal",
            "program": "/usr/bin/odoo",
            "args": [
                "--config=/etc/odoo/odoo.conf",
                "--limit-time-real",
                "300",
                "-d",
                "odoo-local",
                "-u",
                "pharmacy_management",
                "--stop-after-init"
            ]
        },
    ]
}